{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": true,
        "strict": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
